{
  "info": {
    "name": "Foodnager - Recipes API",
    "description": "Complete test collection for Recipes endpoints",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:4321",
      "type": "string"
    },
    {
      "key": "authToken",
      "value": "YOUR_TOKEN_HERE",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "1. List Recipes",
      "item": [
        {
          "name": "List All Recipes",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/recipes",
              "host": ["{{baseUrl}}"],
              "path": ["api", "recipes"]
            }
          }
        },
        {
          "name": "List with Pagination",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/recipes?page=1&limit=10",
              "host": ["{{baseUrl}}"],
              "path": ["api", "recipes"],
              "query": [
                { "key": "page", "value": "1" },
                { "key": "limit", "value": "10" }
              ]
            }
          }
        },
        {
          "name": "Search by Text",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/recipes?search=tomato",
              "host": ["{{baseUrl}}"],
              "path": ["api", "recipes"],
              "query": [{ "key": "search", "value": "tomato" }]

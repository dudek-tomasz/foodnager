            "url": {
              "raw": "{{baseUrl}}/api/recipes?difficulty=easy",
              "host": ["{{baseUrl}}"],
              "path": ["api", "recipes"],
              "query": [{ "key": "difficulty", "value": "easy" }]
            }
          }
        },
        {
          "name": "Filter by Max Cooking Time",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              }
            ],
            "url": {

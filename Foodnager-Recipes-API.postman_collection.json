            "url": {
              "raw": "{{baseUrl}}/api/recipes?tags=1,2",
              "host": ["{{baseUrl}}"],
              "path": ["api", "recipes"],
              "query": [{ "key": "tags", "value": "1,2" }]
            }
          }
        },
        {
          "name": "Sort by Title (ASC)",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/recipes?sort=title&order=asc",
              "host": ["{{baseUrl}}"],
              "path": ["api", "recipes"],
              "query": [
                { "key": "sort", "value": "title" },
                { "key": "order", "value": "asc" }
              ]
            }
          }
        },
        {
          "name": "Complex Query",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/recipes?search=soup&difficulty=easy&max_cooking_time=45&sort=created_at&order=desc",
              "host": ["{{baseUrl}}"],
              "path": ["api", "recipes"],
              "query": [
                { "key": "search", "value": "soup" },
                { "key": "difficulty", "value": "easy" },
                { "key": "max_cooking_time", "value": "45" },
                { "key": "sort", "value": "created_at" },
                { "key": "order", "value": "desc" }
              ]
            }
          }
        }

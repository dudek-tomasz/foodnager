---
/**
 * Main Layout
 * 
 * Standard layout for authenticated pages with navigation.
 * Following auth-spec.md:
 * - Passes user data to Sidebar for UserInfoDisplay (US-001.6)
 * - Desktop: Sidebar with user info and logout button
 * - Mobile: BottomNavigation with profile link
 */

import "../styles/global.css";
import { Toaster } from "@/components/ui/sonner";
import Sidebar from "@/components/navigation/Sidebar.astro";
import BottomNavigation from "@/components/navigation/BottomNavigation.astro";

interface Props {
  title?: string;
  description?: string;
}

const { 
  title = "Foodnager - Zarządzaj lodówką i znajdź przepisy",
  description = "Aplikacja do zarządzania wirtualną lodówką i wyszukiwania przepisów na podstawie dostępnych składników"
} = Astro.props;

// Pobierz aktualną ścieżkę dla nawigacji
const currentPath = Astro.url.pathname;

// Pobierz dane użytkownika z middleware (Astro.locals.user)
const user = Astro.locals.user;

// Przygotuj dane użytkownika dla Sidebar (tylko email potrzebny)
const userData = user ? { email: user.email } : null;
---

<!doctype html>
<html lang="pl">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <!-- Desktop Sidebar Navigation (≥1024px) -->
    <Sidebar currentPath={currentPath} user={userData} />

    <!-- Main Content Area -->
    <main class="main-content">
      <slot />
    </main>

    <!-- Mobile Bottom Navigation (<1024px) -->
    <BottomNavigation currentPath={currentPath} />

    <!-- Global Toast Notifications -->
    <Toaster client:load />
  </body>
</html>

<style>
  html {
    margin: 0;
    width: 100%;
    height: 100%;
    scroll-behavior: smooth;
  }

  body {
    margin: 0;
    width: 100%;
    min-height: 100vh;
    overflow-x: hidden;
  }

  /* Main content area */
  .main-content {
    width: 100%;
    min-height: 100vh;
    /* Space for bottom navigation on mobile/tablet */
    padding-bottom: 64px;
  }

  /* Desktop layout with sidebar */
  @media (min-width: 1024px) {
    .main-content {
      margin-left: 240px;
      width: calc(100% - 240px);
      padding-bottom: 0;
    }
  }
</style>
